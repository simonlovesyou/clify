{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": ["src/**/*", "examples/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
  }